<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius"></corners>
            <solid android:color="@color/color_accent_secondary"></solid>
            <stroke android:width="1dp" android:color="@color/color_accent_secondary_lighter"></stroke>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius"></corners>
            <solid android:color="@color/color_accent"></solid>
            <stroke android:width="1dp" android:color="@color/color_accent_darker"></stroke>
        </shape>
    </item>

</selector>