<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text</item>
        <item name="android:colorBackground">#f5f5f5</item>
    </style>


    <style name="Job" parent="AppTheme">

    </style>

    <style name="Job.Title" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="Job.SubTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="Job.Info" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Job.Section.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:layout_marginBottom">@dimen/small_vertical_margin</item>
    </style>

    <style name="Job.Button.Submit" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/color_inverse</item>
        <item name="android:background">@drawable/btn_submit</item>
    </style>


</resources>
